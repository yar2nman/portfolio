---
import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import Header from "../../components/Header.astro";
import { PROJECTS } from "../../config";

---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title="Projects" description="List of projects" />
	</head>
	<body>
		<Header title="Projects" />
		<main>
			<div class="container mx-auto px-4">
				{PROJECTS.map((project) => (
					<a href={`/projects/${project.id}`} class="block w-full mb-4 p-4 border rounded hover:bg-gray-100 transition">
						<div class="flex">
							<img src={project.images[0]} alt={project.name} class="w-1/3 h-auto object-cover mr-4" />
							<div class="w-2/3">
								<h2 class="text-xl font-bold mb-2">{project.name}</h2>
								<p>{project.description}</p>
							</div>
						</div>
					</a>
				))}
			</div>
		</main>
		<Footer />
	</body>
</html>
