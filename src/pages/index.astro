---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import StackCard from "../components/StackCard.astro";

import { SITE_TITLE, SITE_DESCRIPTION, ABOUT_ME, STACKS } from "../config";

const stacks = STACKS;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header title={SITE_TITLE} />
		<main>
			{ABOUT_ME.map(i => <span class="my-1 text-gray-500">{i}</span><br/>)}
			<h2 class="my-2">My Stack</h2>
			<div>Below is a list of my stack and ratings based on my self generous assessment.</div>
			<div>Each stack is a link to projects created with this stack. "WOP"</div>
			<div>Hope you will like my portfolio.</div>


				<div
					class="mt-3 flex justify-center flex-wrap -mx-1 lg:-mx-4 space-x-1 space-y-1"
				>
					{
						stacks.map((item) => (
							<StackCard item={item} />
						))
					}
				</div>
		</main>
		<Footer />
	</body>
</html>
